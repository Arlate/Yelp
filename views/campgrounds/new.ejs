<% layout('layouts/boilerplate') %>
    <div class="container">
        <div class="row">
            <h1 class="text-center">New Campground</h1>
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="name">Camping Name</label>
                        <input class="form-control" type="text" placeholder="" id="name" required
                            name="campground[title]">
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="city">Location</label>
                        <input class="form-control" type="text" id="city" placeholder="" required
                            name="campground[location]">
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input class="form-control" type="number" id="price" placeholder="0.00"
                                name="campground[price]" required>
                            <div class="valid-feedback">Great!</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="img">Add Images</label>
                        <input class="form-control" type="file" name="image" id="img" multiple>
                    </div>
                    <!-- <div class="mb-3">
                        <label class="form-label" for="img">Image Url</label>
                        <input class="form-control" type="text" id="img" placeholder="" required
                            name="campground[image]">
                        <div class="valid-feedback">Great!</div>
                    </div> -->
                    <div class="mb-3">
                        <label class="form-label" for="desc">Description</label>
                        <textarea class="form-control" type="text" id="desc" name="campground[description]"
                            required></textarea>
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
            </div>

        </div>

    </div>
