<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row">
            <h1 class="text-center">Campground Edit</h1>
            <div class="col-md-6 offset-md-3">
                <form action="/campgrounds/<%= camp.id %>?_method=PATCH" method="POST" novalidate class="validated-form"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="name">Camping Name</label>
                        <input class="form-control" required type="text" placeholder="" id="name"
                            name="campground[title]" value="<%= camp.title  %>">
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="city">Location</label>
                        <input class="form-control" required type="text" id="city" placeholder=""
                            name="campground[location]" value="<%= camp.location  %>">
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input class="form-control" type="number" id="price" placeholder="0.00"
                                name="campground[price]" required value="<%= camp.price  %>">
                            <div class="valid-feedback">Great!</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="desc">Description</label>
                        <textarea class="form-control" type="text" id="desc" placeholder="city"
                            name="campground[description]" required><%= camp.description  %></textarea>
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="img">Add Images</label>
                        <input class="form-control" type="file" id="img" placeholder="" name="image"
                            value="<%= camp.image  %>" multiple>
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <div class="form-label" for="">Delete Images</div>
                        <% camp.images.forEach(function(img, i) { %>
                            <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" >
                            <div class="form-check-inline">
                                <input type="checkbox" id="img-<%=i%>" name="deleteImages[]"
                                value="<%=img.filename%>">
                            </div>
                            <label for="img-<%=i%>">Delete?</label>
                            <% }) %>
                    </div>
                    <button class="btn btn-info mb-3">Update</button>
                </form>

            </div>

        </div>
    </div>