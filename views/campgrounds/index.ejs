<% layout('layouts/boilerplate') %>

    <div id="map" style="width: 100%; height:600px;"></div>
    <% for (camp of camps) { %>
        <div class="container mt-3">
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (camp.images.length) {%>
                            <img src="<%=camp.images[0].url%>" alt="img" class="img-fluid">
                            <% } else {%>
                                <img src="https://res.cloudinary.com/dwszziymi/image/upload/v1670714168/YelpCamp/xin0nhebzed91zkyvwk2.jpg"
                                    alt="img" class="img-fluid" crossorigin="anonymous">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title" style="font-size: 2rem;">
                                <%=camp.title%>
                            </h5>
                            <p class="card-text">
                                <%=camp.location%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=camp.description%>
                                </small>
                            </p>
                            <a href="/campgrounds/<%=camp.id%>" class="btn btn-primary">View <%=camp.title%></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

<script>
    const campgrounds = { features: <%- JSON.stringify(camps)%> }
</script>
<script src="/clusterMap.js"></script>